    @if (Model.Promotions != null && Model.Promotions.Count > 0)
    {
        foreach (var promotion in Model.Promotions)
        {
            <div class="container">
                <div class="container-sale">
                    <div class="container-sale-header">
                        <div class="sale-info">
                            <h2>@promotion.PromotionName</h2>
                        </div>
                        <div class="countdown-timer" data-enddate="@promotion.EndDate">
                            <div class="time-box">
                                <p class="days">00</p>
                                <span>Ngày</span>
                            </div>
                            <div class="time-box">
                                <p class="hours">00</p>
                                <span>Giờ</span>
                            </div>
                            <div class="time-box">
                                <p class="minutes">00</p>
                                <span>Phút</span>
                            </div>
                            <div class="time-box">
                                <p class="seconds">00</p>
                                <span>Giây</span>
                            </div>
                        </div>
                    </div>

                    <div class="container-sale-product">
                        <ul class="list-product-hot" id="list-product-sale">
                            @if (promotion.Products != null && promotion.Products.Count > 0)
                            {
                                foreach (var product in promotion.Products)
                                {
                                    <li class="product-hot-item">
                                        <a href="@Url.Action("ProductDetail", "Home", new { id = product.ProductId })" class="product-link">
                                            <div class="img">
                                                <img src="@product.ProductImage" alt="@product.ProductName" />
                                            </div>
                                            <div class="product-info">
                                                <div class="product-name">
                                                    @product.ProductName
                                                </div>
                                                <p class="original-price">@String.Format("{0:0,0} VND", product.UnitPrice)</p>
                                                <div class="price-discount">
                                                    <p class="product-price">@String.Format("{0:0,0} VND", product.DiscountPrice)</p>
                                                    <p class="discount-percentage">@product.DiscountPercent %</p>
                                                </div>
                                            </div>
                                            </a>
                                    </li>

                                   
                                }
                            }
                            else
                            {
                                <p>No products available for this promotion.</p>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No promotions available.</p>
    }






