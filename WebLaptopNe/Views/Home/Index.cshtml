    <section class="home-product">
        <div class="container">
            <div class="product-wrapper">
                <div class="wrapper-top">
                    <div class="wrapper-category">Laptop Gaming</div>
                    <a href="@Url.Action("Category", "Home", new { categoryId = 1 })">Xem thêm</a>
                </div>

                <div class="wrapper-bottom">
                    <ul class="list-product" id="list-product1">
                        @foreach (var p in Model.Products
                            .Where(p => p.category_id == 1)
                            .OrderByDescending(p => p.created_at)
                            .Take(5))
                        {
                            var imgne = Model.ProductImages?.FirstOrDefault(pi => pi.product_id == p.id);
                            var imageUrl = imgne != null ? imgne.url : "/Content/img/default-product-image.jpg";
                            var discountedPrice = (p.unit_price - p.unit_price * p.discount_percent / 100);
                            <li class="product-item">
                                <a href="@Url.Action("ProductDetail", "Home", new { id = p.id })" class="product-link">
                                    <div class="img">
                                        <img src="@imageUrl" alt="@p.product_name" />
                                    </div>

                                    <div class="product-info">
                                        <div class="product-name">@p.product_name</div>
                                        <p class="original-price">@p.unit_price.ToString("N0") VND</p>

                                        <div class="price-discount">
                                            <p class="product-price">@discountedPrice.ToString("N0") VND</p>
                                            <p class="discount-percentage">-@p.discount_percent %</p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </section>

